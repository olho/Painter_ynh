{
    "name": "painter",
    "id": "painter",
    "description": {
        "en": "Painter is a simple webapp for drawing based on HTML5 Canvas."
    },
    "licence": " Released under the MIT,Apache BSD, and GPL Licenses.",
    "developer": {
        "name": "Volodymyr Vavrykovych",
        "email": "estrolix@gmail.com",
        "url": "http://estrolix.com"
    },
    "multi_instance": "false",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for Painter"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for Painter"
                },
                "example": "/painter",
                "default": "/painter"
            },
            {
                "name": "admin",
                "ask": {
                    "en": "Choose an admin user"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public application ?"
                },
                "choices": ["Yes", "No"],
                "default": "No"
            }
        ]
    }
}
